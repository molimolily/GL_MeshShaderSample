#version 460
#extension GL_NV_mesh_shader : require

layout(local_size_x = 1) in;
layout(max_vertices = 3, max_primitives = 3) out;
layout(triangles) out;

out PerVertexData
{
	vec4 color;
} perVertexDatas[];

void main() 
{
    gl_MeshVerticesNV[0].gl_Position = vec4(-0.5, -0.5, 0.0, 1.0);
    gl_MeshVerticesNV[1].gl_Position = vec4( 0.5, -0.5, 0.0, 1.0);
    gl_MeshVerticesNV[2].gl_Position = vec4( 0.0,  0.5, 0.0, 1.0);

    perVertexDatas[0].color = vec4(1.0, 0.0, 0.0, 1.0);
    perVertexDatas[1].color = vec4(0.0, 1.0, 0.0, 1.0);
    perVertexDatas[2].color = vec4(0.0, 0.0, 1.0, 1.0);

    gl_PrimitiveIndicesNV[0] = 0;
    gl_PrimitiveIndicesNV[1] = 1;
    gl_PrimitiveIndicesNV[2] = 2;

    gl_PrimitiveCountNV = 1;
}
